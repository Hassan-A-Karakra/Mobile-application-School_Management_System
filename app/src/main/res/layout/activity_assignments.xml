<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssignmentsActivity">

     <!-- Assignment container for dynamic items -->
     <ScrollView
         android:id="@+id/scrollView"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toTopOf="@id/assignmentEditText"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">

          <LinearLayout
              android:id="@+id/assignmentContainer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp"/>
     </ScrollView>

     <!-- Optional input if needed -->
     <EditText
         android:id="@+id/assignmentEditText"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:hint="Enter Assignment Details"
         android:layout_marginStart="16dp"
         android:layout_marginEnd="16dp"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@+id/scrollView"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>

     <Button
         android:id="@+id/submitAssignmentButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Submit Assignment"
         android:layout_marginTop="12dp"
         app:layout_constraintTop_toBottomOf="@id/assignmentEditText"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitAssignmentActivity"
    android:padding="24dp">

    <!-- Assignment ID Input -->
    <EditText
        android:id="@+id/assignmentIdInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Assignment ID"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Student ID Input -->
    <EditText
        android:id="@+id/studentIdInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Student ID"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/assignmentIdInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Assignment Content Input -->
    <EditText
        android:id="@+id/contentInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Assignment Content"
        android:minLines="4"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/studentIdInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/contentInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
